{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "vsc-terminal",
    "version": "0.1.0",
    "identifier": "com.newtun.vscterminal",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:4200",
        "beforeDevCommand": "ng s",
        "beforeBuildCommand": "ng build"
    },
    "app": {
        "windows": [
            {
                "title": "VsCode Terminal",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
